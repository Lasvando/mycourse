@model CourseDetailViewModel

<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-md-3 d-flex align-item-center">
            <a href="#" class="btn btn-warning btn-lg btn-block register-button mt-5">Iscriviti</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p>@Model.Description</p>
        </div>
        <div class="col-md-3 course-picture">
            <aside>
                <author>di @Model.Author</author>
                <div class="rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (Model.Rating >= i)
                        {
                            <i class="fas fa-star"></i>
                        }
                        else if (Model.Rating > i - 1)
                        {
                            <i class="fas fa-star-half-alt"></i>
                        }
                        else
                        {
                            <i class="far fa-star"></i>
                        }
                    }
                </div>
                <div class="price">@Model.CurrentPrice <br><s>@Model.FullPrice</s></div>
                <div class="course-picture">
                    <img src="@Model.ImagePath" alt="course-picture" width="128">
                </div>
            </aside>
        </div>
    </div>
</section>
<section class="course-lessons">
    <h2>Lezioni (@Model.Lessons.Count)</h2>
    @foreach (var lesson in Model.Lessons)
    {
        <hr>
        <div class="row">
            <div class="col-md-9 d-flex align-items-left">
                <a href="#">@lesson.Title</a>
            </div>
            <div class="col-md-3 d-flex align-items-right lesson-duration">
                <i class="far fa-clock "></i><time>@lesson.Duration.ToString("m'm 's's'")</time>
            </div>
        </div>
    }
    <hr>
    <div class="row course-duration">
        <div class="col-md-9 d-flex align-items-left">
            Totale
        </div>
        <div class="col-md-3 d-flex align-items-right lesson-duration">
            <i class="far fa-clock"></i><time>@Model.TotalCourseDuration.ToString("m'm 's's'")</time>
        </div>
    </div>
</section>