<h1>Catalogo dei Corsi</h1>
@for (int i = 1; i < 10; i++)
{
    <div class="row">
        <div class="col-md-1">
            <img src="~/logo.svg" alt="course-picture" width="50">
        </div>
        <div class="col-md-5">
            <h2>Titolo del Corso @i</h2>
            <author>di Nome Autore</author>
        </div>
        <div class="col-md-2">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        </div>
        <div class="col-md-2">
            EUR 10,99 <br><s>EUR 12,99</s>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-primary" type="button" asp-action="Detail" asp-controller="Courses"
                asp-route-id="@i">Dettaglio</a>
        </div>
    </div>
}
